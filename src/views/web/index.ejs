                <li>
                    <img src="/images/mainSlider/slider3.png" alt="Slider DC" class="slider__img slider__img-above">
                </li>
                <li>
                    <img src="/images/mainSlider/slider4.png" alt="Slider Independiente" class="slider__img slider__img-above">
                </li>
            </ul>
        </div>

        <div class="main__slider-img">
            <ul>
                <li>
                    <img src="/images/mainSlider/slider1.png" alt="Slider Manga" class="slider__img">
