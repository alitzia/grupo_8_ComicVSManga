<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head.ejs', {title: 'Manga Team'}) %>
    <link rel="stylesheet" href="/css/productsStyle.css">
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
        <!-- Banner -->
        <!--
        <img src="/images/mainSlider/slider1.png" alt="Banner Manga" class="main__banner-img main__banner-img-above">
        <img src="/images/mainSlider/slider1.png" alt="Banner Manga" class="main__banner-img">
        -->
        <div class="main__banner main__banner-manga">
            <video src="/images/categories/homeDecor.mp4" alt="Banner" autoplay muted loop></video>
        </div>

        <!-- Productos -->
        <div class="main__products-tittle">
            <h1>TEAM</h1>
            <h1>MANGA</h1>
        </div>
        <section class="main__products">
            <% for(let i = 0; i < productsInCategory.length; i++) {%>
                <article class="product__container product__container-manga">
                    <a href="/products/detail/<%= productsInCategory[i].product_id %>">
                        <img src="/images/products/<%= productsInCategory[i].image %>" alt="Imagen de producto" class="products__img">
                        <form action="/shopping-cart"  method="post">
                            <input type="hidden" value="<%= productsInCategory[i].product_id %>" name="id">
                            <button type="submit" class="shopping-cart__container">
                                <i class="fa-solid fa-cart-shopping fa-cart-shopping-products fa-cart-shopping-products-manga"></i>
                            </button>
                        </form>
                        <h3><%= productsInCategory[i].name %></h3>
                        <p><b><%= productsInCategory[i].price %></b> COP</p>
                    </a>
                </article>
             <% } %>
        </section>
    </main>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>