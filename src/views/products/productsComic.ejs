<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: 'Comic Team'}) %>
    <link rel="stylesheet" href="/css/productsStyle.css">
    <script defer src="/js/video.js"></script>
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
        <!-- Banner -->
        <div class="main__banner main__banner-comic">
            <video src="/images/categories/introMarvel.mp4" id="bannerVideos" alt="Banner" autoplay muted></video>
        </div>

        <!-- Imagen lateral -->
        <div class="main__side-container">
            <img src="/images/ironMan.png" alt="Superman" class="main__side-image">
        </div>

        <!-- Productos -->
        <div class="main__products-tittle">
            <h1>TEAM</h1>
            <h1>CÃ³MICS</h1>
        </div>
        <section class="main__products">
            <% for(let i = 0; i < productsInCategory.length; i++) {%>
                <article class="product__container product__container-comic">
                    <a href="/products/detail/<%= productsInCategory[i].product_id %>">
                        <img src="/images/products/<%= productsInCategory[i].image %>" alt="Imagen de producto" class="products__img">
                        <form action="/shopping-cart"  method="post">
                            <input type="hidden" value="<%= productsInCategory[i].product_id %>" name="id">
                            <button type="submit" class="shopping-cart__container">
                                <i class="fa-solid fa-cart-shopping fa-cart-shopping-products fa-cart-shopping-products-comic"></i>
                            </button>
                        </form>
                        <h3><%= productsInCategory[i].name %></h3>
                        <p><b><%= productsInCategory[i].price %></b> COP</p>
                    </a>
                </article>
             <% } %>
        </section>
    </main>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>