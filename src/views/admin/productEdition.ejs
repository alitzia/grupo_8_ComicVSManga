<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: 'Edición de Productos'}) %>
    <link rel="stylesheet" href="/css/styleProductCreation.css">
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
        <div class="main-container">
            <h2 class="main__form-tittle">Producto a editar: <%= productToEdit.name %></h2>
            <form action="/products/<%= productToEdit.product_id %>/edit?_method=PUT" method="post" class="main__form" enctype="multipart/form-data">
                <div>
                    <label for="name" class="main__form-label">Nombre del producto</label>
                    <input type="text" name="name" id="name" class="" value="<%= productToEdit.name %>" required>
                </div>

                <div>
                    <label for="description" class="main__form-label">Descripción</label>
                    <textarea name="description" id="description" class="" rows="5"><%= productToEdit.description %></textarea>
                </div>

                <div>
                    <label for="image" class="main__form-upload">Subir imagen</label>
                    <input type="file" name="image" id="image" accept="image/*" class="">
                </div>

                <div>
                    <label for="category" class="main__form-label">Categorías</label>
                    <% for(let i = 0; i < categories.length; i++) { %>
                        <label>
                            <input
                                type="checkbox"
                                value="<%= categories[i].category_id %>" 
                                <% for( let j = 0; j < productToEdit.categories.length; j++ ) { %>
                                    <% if (categories[i].category_id == productToEdit.categories[j].category_id) { %>
                                        checked
                                    <% } %>    
                                <% } %>
                                name="category">
                                <%= categories[i].category %>  
                        </label>
                    <% } %>
                </div>

                <div>
                    <label for="author" class="main__form-label">Autores</label>
                    <input type="text" name="author" id="author" value="<%= productToEdit.author %>" class="" required>
                </div>

                <select name="format" class="" required>
                    <option disabled>Seleccione formato</option>
                    <% for(let i = 0; i < formats.length; i++) { %>
                        <% if (formats[i].format_id == productToEdit.formats.format_id) { %>
                            <option value="<%= formats[i].format_id %>" selected><%= formats[i].format %></option>
                        <% } else{%>
                            <option value="<%= formats[i].format_id %>"><%= formats[i].format %> </option>
                        <% } %>
                    <% } %>
                </select>

                <div>
                    <label for="pages" class="main__form-label">Páginas</label>
                    <input type="number" name="pages" id="pages" value="<%= productToEdit.pages %>" class="" required>
                </div>

                <div>
                    <label for="price" class="main__form-label">Precio</label>
                    <input type="number" name="price" id="price" value="<%= productToEdit.price %>" class="" required>
                </div>

                <div>
                    <label><input type="checkbox" name="featured" class="" id="featured" <%= locals.productToEdit && productToEdit.featured == 1 ? 'checked' : ''; %>>Producto destacado</label>
                </div>

                <div>
                    <label><input type="checkbox" name="onSale" class="" id="onSale" <%= locals.productToEdit && productToEdit.on_sale == 1 ? 'checked' : ''; %>>Producto en oferta</label>
                </div>

                <div>
                    <label for="discount" class="main__form-label">Descuento</label>
                    <input type="number" name="discount" value="<%= productToEdit.discount %>" class="" required placeholder="Si no está en oferta, es cero (0)">
                </div>

                <div>
                    <label for="stock" class="main__form-label">Stock</label>
                    <input type="number" name="stock" class="" value="<%= productToEdit.stock %>" required>
                </div>

                <div class="main__form-buttons">
                    <button type="submit">Modificar</button>
                    <button type="reset">Resetear datos</button>
                </div>

            </form>

            <form action="/products/<%= productToEdit.product_id %>/delete?_method=DELETE" method="POST" class="delete-button">
                <div class="main__form-buttons">
                    <button type="submit">Eliminar producto</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>